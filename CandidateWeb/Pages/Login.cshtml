@page "/Login"
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 style="text-align: center; color: #333; margin-bottom: 20px;">Login</h2>
<body>
    <form method="post" style="display: flex; justify-content: center; align-items: center; flex-direction: column; max-width: 400px; margin: 0 auto; padding: 20px; background-color: #f8f9fa; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div class="col-12" style="width: 100%;">
            <div class="row" style="align-items: center; margin-bottom: 10px;">
                <div class="col-8">
                    <div class="col-2">
                        <label style="font-weight: bold; color: #333;">Email:</label>
                    </div>
                    <div>
                        <input name="txtEmail" type="text" style="width: 100%; padding: 10px; margin-top: 5px; margin-bottom: 15px; border: 1px solid #ced4da; border-radius: 4px; font-size: 1rem;" /> </br>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-bottom: 10px;">
                <div class="col-8">
                    <div class="col-2">
                        <label style="font-weight: bold; color: #333;">Password:</label>
                    </div>
                    <div>
                        <input name="txtPassword" type="password" style="width: 100%; padding: 10px; margin-top: 5px; margin-bottom: 15px; border: 1px solid #ced4da; border-radius: 4px; font-size: 1rem;" /> </br>
                    </div>
                </div>
            </div>

            <!-- Center the buttons within their own row -->
            <div class="row" style="display: flex; justify-content: center; margin-top: 20px;">
                <input name="btnButton" class="btn btn-primary" type="submit" value="Login" style="background-color: #007bff; border: none; color: white; padding: 10px 20px; cursor: pointer; border-radius: 4px; transition: background-color 0.3s ease; width: 100px; margin-right: 10px;" />
                <input type="reset" class="btn btn-danger" value="Cancel" style="background-color: #dc3545; border: none; color: white; padding: 10px 20px; cursor: pointer; border-radius: 4px; transition: background-color 0.3s ease; width: 100px;" />
            </div>
        </div>
    </form>

    <style>
        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</body>
