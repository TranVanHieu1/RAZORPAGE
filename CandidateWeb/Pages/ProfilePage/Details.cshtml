@page
@model CandidateWeb.Pages.ProfilePage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="page-title">Candidate Profile Details</h1>

<div class="profile-details-container">
    <h4 class="section-title">Candidate Information</h4>
    <hr />
    <dl class="row profile-details-list">
        <div class="detail-item">
            <dt class="col-sm-4 label">
                @Html.DisplayNameFor(model => model.CandidateProfile.Fullname)
            </dt>
            <dd class="col-sm-8 value">
                @Html.DisplayFor(model => model.CandidateProfile.Fullname)
            </dd>
        </div>

        <div class="detail-item">
            <dt class="col-sm-4 label">
                @Html.DisplayNameFor(model => model.CandidateProfile.Birthday)
            </dt>
            <dd class="col-sm-8 value">
                @Html.DisplayFor(model => model.CandidateProfile.Birthday)
            </dd>
        </div>

        <div class="detail-item">
            <dt class="col-sm-4 label">
                @Html.DisplayNameFor(model => model.CandidateProfile.ProfileShortDescription)
            </dt>
            <dd class="col-sm-8 value">
                @Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)
            </dd>
        </div>

        <div class="detail-item">
            <dt class="col-sm-4 label">
                @Html.DisplayNameFor(model => model.CandidateProfile.ProfileUrl)
            </dt>
            <dd class="col-sm-8 value">
                @Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)
            </dd>
        </div>

        <div class="detail-item">
            <dt class="col-sm-4 label">
                @Html.DisplayNameFor(model => model.CandidateProfile.Posting)
            </dt>
            <dd class="col-sm-8 value">
                @Html.DisplayFor(model => model.CandidateProfile.Posting.PostingId)
            </dd>
        </div>
    </dl>
</div>

<div class="action-links">
    <a asp-page="./Edit" asp-route-id="@Model.CandidateProfile.CandidateId" class="btn btn-edit">Edit</a>
    <a asp-page="./Index" class="btn btn-back">Back to List</a>
</div>

<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: #333;
        font-size: 1.8em;
        margin-top: 20px;
        font-weight: 600;
    }

    /* Section Title */
    .section-title {
        color: #666;
        font-size: 1.4em;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 500;
    }

    /* Details Container */
    .profile-details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fafafa;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Details List Styling */
    .profile-details-list {
        display: flex;
        flex-direction: column;
    }

    .detail-item {
        display: flex;
        margin-bottom: 10px;
        align-items: center;
    }

    .label {
        font-weight: 600;
        color: #555;
    }

    .value {
        color: #333;
        font-weight: 400;
        padding-left: 10px;
        word-wrap: break-word;
    }

    /* Action Links */
    .action-links {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        gap: 15px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 5px;
        font-weight: 500;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-edit {
        background-color: #007bff;
        color: white;
    }

        .btn-edit:hover {
            background-color: #0056b3;
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }
</style>
