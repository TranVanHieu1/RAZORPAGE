@page
@model CandidateWeb.Pages.ProfilePage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title">Create New Candidate Profile</h1>

<h4 class="section-title">Candidate Profile</h4>
<hr />
<div class="form-container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

        <div class="form-group">
            <label asp-for="CandidateProfile.CandidateId" class="control-label"></label>
            <input asp-for="CandidateProfile.CandidateId" class="form-control" placeholder="Enter Candidate ID" />
            <span asp-validation-for="CandidateProfile.CandidateId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CandidateProfile.Fullname" class="control-label"></label>
            <input asp-for="CandidateProfile.Fullname" class="form-control" placeholder="Enter Full Name" />
            <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CandidateProfile.Birthday" class="control-label"></label>
            <input asp-for="CandidateProfile.Birthday" class="form-control" placeholder="MM/DD/YYYY" />
            <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CandidateProfile.ProfileShortDescription" class="control-label"></label>
            <input asp-for="CandidateProfile.ProfileShortDescription" class="form-control" placeholder="Enter Short Description" />
            <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CandidateProfile.ProfileUrl" class="control-label"></label>
            <input asp-for="CandidateProfile.ProfileUrl" class="form-control" placeholder="Enter Profile URL" />
            <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CandidateProfile.PostingId" class="control-label"></label>
            <select asp-for="CandidateProfile.PostingId" class="form-control">
                <option value="">Select Posting</option>
                @foreach (var item in (SelectList)ViewBag.PostingId)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Create" class="btn btn-primary create-btn" />
            <a asp-page="Index" class="btn btn-secondary cancel-btn">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Page Titles */
    .page-title {
        text-align: center;
        color: #333;
        font-size: 2em;
        font-weight: bold;
        margin-top: 20px;
    }

    .section-title {
        text-align: center;
        color: #555;
        font-size: 1.5em;
        margin-bottom: 20px;
    }

    /* Form Styling */
    .form-container {
        max-width: 500px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ddd;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.3);
        }

    /* Validation Styling */
    .validation-summary {
        margin-bottom: 15px;
    }

    /* Button Styling */
    .create-btn {
        padding: 10px 20px;
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 4px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .create-btn:hover {
            background-color: #0056b3;
            box-shadow: 0px 4px 10px rgba(0, 91, 187, 0.3);
        }

    .cancel-btn {
        padding: 10px 20px;
        background-color: #6c757d;
        border: none;
        color: white;
        border-radius: 4px;
        font-weight: 500;
        transition: background-color 0.3s ease;
        margin-left: 10px;
    }

        .cancel-btn:hover {
            background-color: #5a6268;
        }
</style>
