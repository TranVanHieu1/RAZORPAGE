@page
@model CandidateWeb.Pages.ProfilePage.EditModel

@{
    ViewData["Title"] = "Edit Candidate Profile";
}

<h1 class="text-center mb-4">Edit Candidate Profile</h1>

<div class="container">
    <h4>Candidate Profile Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CandidateProfile.CandidateId" />

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.Fullname" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.Fullname" class="form-control" placeholder="Enter Full Name" />
                    <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.Birthday" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.Birthday" class="form-control" type="date" />
                    <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.ProfileShortDescription" class="form-label fw-bold"></label>
                    <textarea asp-for="CandidateProfile.ProfileShortDescription" class="form-control" rows="3" placeholder="Short Description"></textarea>
                    <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.ProfileUrl" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.ProfileUrl" class="form-control" placeholder="Profile URL" />
                    <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.PostingId" class="form-label fw-bold"></label>
                    <select asp-for="CandidateProfile.PostingId" class="form-control" asp-items="ViewBag.PostingId">
                        <option value="">Select Posting</option>
                    </select>
                    <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
